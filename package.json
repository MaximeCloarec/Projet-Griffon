{
    "name": "projet-griffon",
    "version": "1.0.0",
    "description": "A tableTop-app",
    "main": "server.js",
    "scripts": {
        "dev": "node ./server",
        "start": "node ./server.js",
        "generate": "prisma generate --schema=./src/prisma/schema.prisma",
        "generate:test": "prisma generate --schema=./src/prisma/schema.test.prisma",
        "generate:all": "npm run generate && npm run generate:test",
        "migrate:dev": "prisma migrate dev --schema=./src/prisma/schema.prisma",
        "db:push:test": "npx prisma db push --force-reset --schema=./src/prisma/schema.test.prisma",
        "test": "vitest",
        "test:unit": "vitest",
        "test:integration": "dotenv -e .env.test -- vitest run --config vitest.integration.config.js",
        "test:coverage": "vitest run --coverage"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@prisma/client": "^6.13.0",
        "bcrypt": "^6.0.0",
        "cors": "^2.8.5",
        "dotenv": "^17.0.1",
        "express": "^5.1.0",
        "jsonwebtoken": "^9.0.2",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@vitest/coverage-v8": "^4.0.8",
        "dotenv-cli": "^11.0.0",
        "prisma": "^6.13.0",
        "vitest": "^4.0.8"
    }
}
